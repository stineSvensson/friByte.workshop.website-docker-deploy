---
import Layout from "../components/Layout.astro";
---

<Layout title="My first docker website">
  <div class="container">
    <h1>My first website</h1>
    <p>
      Welcome to my first website built with Astro and Docker on a friByte
      workshop!
    </p>
    <img src="/friByte.svg" alt="friByte logo" />
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  h1 {
    font-size: 5rem;
    margin-bottom: 1rem;
  }
  img {
    width: 100%;
    max-width: 600px;
    margin-top: 2rem;
  }
</style>
